<h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
         <td><%= attachment_image_tag @users, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %></td>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
      </tr>
      <% end %>
    </body>
  </table>
<%= render 'books/user info', user: @user, book: @book %>